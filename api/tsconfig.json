{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "paths": {
      "graphql": ["../app/node_modules/graphql"],
      "urql": ["../app/node_modules/urql"],
      "@urql/exchange-graphcache": ["../node_modules/@urql/exchange-graphcache"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
